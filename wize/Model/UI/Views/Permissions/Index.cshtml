<div class="container">
    <div class="row">
        <div class="col-2  text-center">
            <button id="btnNew" class="btn btn_modern">@ViewBag.Dictionary.New</button>
        </div>
        <div class="col-10 royal_blue rounded">
            <div class="card-header text-center" id="headingOne" data-toggle="collapse" data-target="#collapseOne">
                <h5 class="mb-0">
                    <button class="btn btn-link text-white" type="button" aria-expanded="true" aria-controls="collapseOne">
                        @ViewBag.Dictionary.Filters
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="row" dir="rtl">
                    <div class="col-3 offset-1">
                        <div class="form-group text-center text-white">
                            <label for="f_name">@ViewBag.Dictionary.PermissionName</label>
                            <input id="f_name" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-3 offset-1">
                        <div class="form-group text-center text-white">
                            <input type='checkbox' class='ios8-switch' id='f_active'>
                            <label for='f_active'>@ViewBag.Dictionary.ActiveOnly</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="table-responsive" dir="rtl">
        <table id="items" class="display sh_table" style="width:100%">
            <thead>
                <tr>
                    <th class="th-table text-white">@ViewBag.Dictionary.PermissionName</th>
                    <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                    <th class="th-table text-white">@ViewBag.Dictionary.Active</th>
                    <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                </tr>
            </thead>
        </table>
    </div>

</div>


<div class="modal fade text-white" id="current" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-dark">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">@ViewBag.Dictionary.PermissionEdit</h5>
            </div>
            <div class="modal-body" id="current">
                <div class="row" dir="rtl">
                    <div class="col-3 offset-1">
                        <div class="form-group text-center">
                            <label for="name">@ViewBag.Dictionary.PermissionName</label>
                            <input id="name" type="text" />
                        </div>
                    </div>
                    <div class="col-3 offset-1">
                        <div class="form-group text-center text-white">
                            <input type='checkbox' class='ios8-switch' id='active'>
                            <label for='active'>@ViewBag.Dictionary.Active</label>
                        </div>
                    </div>
                </div>
                <div id="tabs">
                    <ul>
                        <li><a href="#tabs-1">@ViewBag.Dictionary.Tables</a></li>
                        <li><a href="#tabs-2">@ViewBag.Dictionary.Forms</a></li>
                        <li><a href="#tabs-3">@ViewBag.Dictionary.Settings</a></li>
                        <li><a href="#tabs-4">@ViewBag.Dictionary.InnerPermissions</a></li>
                    </ul>
                    <div id="tabs-1">
                        <div dir="rtl">
                            <table id="tablesinnerpermissions" class="display sh_table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="th-table text-white">@ViewBag.Dictionary.PermissionName</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.TableName</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Attach</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Read</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Write</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div id="tabs-2">
                        <div dir="rtl">
                            <table id="formsinnerpermissions" class="display sh_table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="th-table text-white">@ViewBag.Dictionary.PermissionName</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.FormName</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Attach</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Read</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Write</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div id="tabs-3">
                        <div dir="rtl">
                            <table id="settingsinnerpermissions" class="display sh_table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="th-table text-white">@ViewBag.Dictionary.PermissionName</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Settings</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Attach</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Read</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.Write</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div id="tabs-4">
                        <div dir="rtl">
                            <table id="innerpermissions" class="display sh_table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="th-table text-white">@ViewBag.Dictionary.PermissionName</th>                                        
                                        <th class="th-table text-white">@ViewBag.Dictionary.Attach</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                        <th class="th-table text-white">@ViewBag.Dictionary.ID</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            <div class="modal-footer text-center">
                <div class="row justify-content-center">
                    <div class="col-2 text-center">
                        <button type="button" class="btn btn_modern" data-dismiss="modal">@ViewBag.Dictionary.Cancel</button>
                    </div>
                    <div class="col-2 text-center">
                        <button type="button" id="btnSave" class="btn btn_modern">@ViewBag.Dictionary.Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Scripts/datatables/datatables.js")
@Scripts.Render("~/Scripts/ViewScripts/Permissions/Index.js")


